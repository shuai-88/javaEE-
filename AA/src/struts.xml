<?xml version="1.0" encoding="UTF-8"?>



   <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
	
<struts>
    <constant name="struts.devMode" value="true"></constant>
    <package name="base" extends="struts-default" namespace="/">
        <action name="loginAction" class="com.action.LoginAction" >
           <result name="success">/show.jsp</result>
           <result name="error">/loginfail.jsp</result>
        </action>
        
        
        <action name="regAction" class="com.action.regAction" >
           <result name="success">/regAction.jsp</result>
           <result name="error">/regfail.jsp</result>
        </action>
        
        
        
    </package>
</struts>
